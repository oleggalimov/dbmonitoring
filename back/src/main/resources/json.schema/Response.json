{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "success": {
      "type": "boolean"
    },
    "body": {
      "type": "object"
    },
    "errors": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            "title": {
              "type": "string",
              "minLength": 3,
              "maxLength": 255
            },
            "message": {
              "type": "string",
              "minLength": 3,
              "maxLength": 255
            }
          },
          "required": [
            "code",
            "title"
          ]
        }
      ]
    },
    "messages": {
      "type": "array",
      "additionalProperties": false,
      "items": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "code": {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            },
            "title": {
              "type": "string",
              "minLength": 3,
              "maxLength": 255
            },
            "message": {
              "type": "string",
              "minLength": 3,
              "maxLength": 255
            },
            "type": {
              "type": "string",
              "pattern": "[A-Z]",
              "minLength": 3,
              "maxLength": 255
            }
          },
          "required": [
            "code",
            "title",
            "type"
          ]
        }
      ]
    }
  },
  "required": [
    "success",
    "errors",
    "messages"
  ]
}